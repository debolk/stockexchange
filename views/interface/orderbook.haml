%script{src: '/javascripts/orderbook.js'}
.column
  %h2 Buy orders by price
  Limit 6 per commodity
  %table#buy_orders.orders
    %thead 
      %tr 
        %th Commodity
        %th Naam
        %th.number Amount
        %th.number Price
    %tbody 

.column
  %h2 Sell orders by price
  %table#sell_orders.orders
    %thead 
      %tr 
        %th Commodity
        %th.number Price
    %tbody 

%script#open_buy_order{type: 'text/x-handlebars-template'}
  %tr{'data-id' => '{{id}}'}
    %td {{commodity.name}}
    %td {{owner}}
    %td.number {{amount}}
    %td.number {{money price}}

%script#open_sell_order{type: 'text/x-handlebars-template'}
  %tr{'data-id' => '{{id}}'}
    %td {{commodity.name}}
    %td.number {{money price}}
